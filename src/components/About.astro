---
const skills = [
  // "Physics Research",
  "Interdisciplinary Research",
  "Film Creation",
  "Media Production",
  // "Leadership",
  "Mathematics",
  "Technology Innovation",
  "Photography",
  // "Project Management",
  "Website Development"
];

const languages = [
  { name: "Chinese", level: "Native" },
  { name: "English", level: "Fluent" },
  { name: "German", level: "Basic" },
  { name: "Arabic", level: "Basic" }
];
---

<section id="about" class="py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-8">About Me</h2>
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <div class="space-y-4">
        <p class="text-gray-600">
          IB Diploma Program Candidate at Shanghai Pinghe School
        </p>
        <p class="text-gray-600">
          <!-- Achieved outstanding results in academics with ACT: 36 and TOEFL: 115.  -->
          Passionate about combining technology with education and media to create meaningful impact.
        </p>
        
        <div class="mt-6">
          <h3 class="text-xl font-semibold mb-4">Skills</h3>
          <div class="flex flex-wrap gap-2">
            {skills.map(skill => (
              <span class="px-3 py-1 bg-white rounded-full text-sm text-gray-700 border border-gray-200">
                {skill}
              </span>
            ))}
          </div>
        </div>

        <div class="mt-6">
          <h3 class="text-xl font-semibold mb-4">Languages</h3>
          <div class="flex flex-wrap gap-2">
            {languages.map(lang => (
              <span class="px-3 py-1 bg-white rounded-full text-sm text-gray-700 border border-gray-200">
                {lang.name} ({lang.level})
              </span>
            ))}
          </div>
        </div>
      </div>
      <div class="relative">
        <img 
          src="https://i.imgur.com/xGlJMAB.jpg"
          alt="Peiyang Li" 
          class="rounded-lg shadow-lg w-full h-auto object-cover"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>
