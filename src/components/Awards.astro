const awards = [
  {
    category: "STEM & Academics",
    items: [
      "High School Mathematical Contest in Modeling (HIMCM): Outstanding (Top 1%)",
      "American Mathematics Competitions (AMC) 10/12: Qualified for AIME",
      "American Regions Mathematics League (ARML): Global Top 10",
      "British Physics Olympiad (BPhO): Gold (Top 10%)",
      "PhysicsBowl: Gold (Top 2%)",
      "Princeton University Physics Competition (PUPC): Honorable Mention",
      "UK Chemistry Olympiad (UKChO): Gold (Top 8%)",
      "Canadian Chemistry Contest (CCC): Silver (Top 20%)",
      "Shanghai Youth Science & Innovation Competition: Third Prize"
    ]
  },
  {
    category: "Creative & Media",
    items: [
      "Visual China Community Photography Contest: Honorable Mention",
      "Original Barrier-Free Movie Creation Competition: Silver Award (Top 2%)",
      "Best Student Film Creator (School): Ranked 1st out of 60 participants"
    ]
